{
    "extends": ["plugin:react/recommended", "./node_modules/cloudify-ui-common/configs/eslint-common-react.json"],
    "settings": {
        "import/resolver": {
            "babel-module": {}
        }
    },
    "overrides": [
        {
            "files": "**/*.stories.{jsx,tsx}",
            "rules": {
                "import/no-extraneous-dependencies": [
                    "error",
                    {
                        "devDependencies": true
                    }
                ]
            }
        },
        // TODO(RD-2949) Remove this override once "react/prop-types" is disabled for .tsx files in common configuration
        {
            "files": ["**/*.tsx"],
            "rules": {
                "react/prop-types": "off"
            }
        }
    ]
}
